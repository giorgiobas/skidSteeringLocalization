    <!-- Base link -->
    <link name='base_link'> 
      <!-- <pose relative_to='world_to_base_link'>0 0 0 0 0 0</pose> -->

      <inertial>
        <mass>60</mass>
        <inertia>
          <ixx>2.28864</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>5.10398</iyy>
          <iyz>0</iyz>
          <izz>3.43147</izz>
        </inertia>
      </inertial>
      
      <collision name='base_link_collision'>
        <pose>0 0 0 1.57 0 -1.57</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/scout_mini_base_link2.dae</uri>
          </mesh>
        </geometry>
      </collision>
      
      <visual name='base_link_visual'>
        <pose>0 0 0 1.57 0 -1.57</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/scout_mini_base_link2.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <!-- Scout wheels -->
    <link name='rear_left_wheel_link'>
      <pose relative_to='rear_left_wheel'>0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>3</mass>
        <inertia>
          <ixx>0.7171</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.7171</iyy>
          <iyz>0</iyz>
          <izz>0.1361</izz>
        </inertia>
      </inertial>
      
      <collision name='rear_left_wheel_link_collision'>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
       <surface>
          <!-- This friction pamareter don't contain reliable data!! -->
           <friction>
            <ode>
              <mu>1</mu>
              <mu2>1</mu2>
              <fdir1>0 0 0</fdir1>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+6</kp>
              <kd>1</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface> 
      </collision>
      
      <visual name='rear_left_wheel_link_visual'>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    
    <joint name='rear_left_wheel' type='revolute'>
      <pose relative_to='base_link'>-0.231976 0.208252 -0.099998 -1.57 0 0</pose>
      
      <parent>base_link</parent>
      <child>rear_left_wheel_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    
    <link name='rear_right_wheel_link'>
      <pose relative_to='rear_right_wheel'>0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>3</mass>
        <inertia>
          <ixx>0.7171</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.7171</iyy>
          <iyz>0</iyz>
          <izz>0.1361</izz>
        </inertia>
      </inertial>
      
      <collision name='rear_right_wheel_link_collision'>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <!-- This friction pamareter don't contain reliable data!! -->
          <friction>
            <ode>
              <mu>1</mu>
              <mu2>1</mu2>
              <fdir1>0 0 0</fdir1>
              <slip1>0.0</slip1>
