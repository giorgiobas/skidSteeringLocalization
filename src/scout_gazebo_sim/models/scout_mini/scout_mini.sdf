<?xml version="1.0" ?>
<sdf version='1.7'>
  <model name='scout_mini'>
  
    <!-- Just for testing
    <joint name='world_to_base_link' type='fixed'>
      <pose relative_to='__model__'>0 0 0.5 0 0 0</pose>
      <parent>world</parent>
