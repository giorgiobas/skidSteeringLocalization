      </collision>
      
      <visual name='rear_right_wheel_link_visual'>
         <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    
    <joint name='rear_right_wheel' type='revolute'>
      <pose relative_to='base_link'>-0.231976 -0.208252 -0.100998 1.57 0 0</pose>
      
      <parent>base_link</parent>
      <child>rear_right_wheel_link</child>
      <axis>
        <xyz>0 0 -1</xyz>
      </axis>
    </joint>
    
    <link name='front_right_wheel_link'>
      <pose relative_to='front_right_wheel'>0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>3</mass>
        <inertia>
          <ixx>0.7171</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.7171</iyy>
          <iyz>0</iyz>
          <izz>0.1361</izz>
        </inertia>
      </inertial>
      
      <collision name='front_right_wheel_link_collision'>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <!-- This friction pamareter don't contain reliable data!! -->
          <friction>
            <ode>
              <mu>1</mu>
              <mu2>1</mu2>
              <fdir1>0 0 0</fdir1>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+6</kp>
              <kd>1</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name='front_right_wheel_link_visual'>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    
    <joint name='front_right_wheel' type='revolute'>
      <pose relative_to='base_link'>0.231976 -0.208252 -0.100998 1.57 0 0</pose>
      
      <parent>base_link</parent>
      <child>front_right_wheel_link</child>
      <axis>
        <xyz>0 0 -1</xyz>
      </axis>
    </joint>
    
    <link name='front_left_wheel_link'>
      <pose relative_to='front_left_wheel'>0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>3</mass>
        <inertia>
          <ixx>0.7171</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.7171</iyy>
          <iyz>0</iyz>
          <izz>0.1361</izz>
        </inertia>
      </inertial>
      
      <collision name='front_left_wheel_link_collision'>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <!-- This friction pamareter don't contain reliable data!! -->
          <friction>
            <ode>
              <mu>1</mu>
              <mu2>1</mu2>
              <fdir1>0 0 0</fdir1>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+6</kp>
              <kd>1</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name='front_left_wheel_link_visual'>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://scout_common/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name='front_left_wheel' type='revolute'>
      <pose relative_to='base_link'>0.231976 0.208252 -0.099998 -1.57 0 0</pose>

      <parent>base_link</parent>
      <child>front_left_wheel_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    
    <!-- Scout plugins -->
    <plugin name='scout_mini_joint_state' filename='libgazebo_ros_joint_state_publisher.so'>
      <ros>
        <namespace>/robot_namespace</namespace>
        <remapping>~/out:=joint_states</remapping>
      </ros>
      
      <update_rate>50</update_rate>
      
      <joint_name>front_right_wheel</joint_name>
      <joint_name>front_left_wheel</joint_name>
      <joint_name>rear_right_wheel</joint_name>
      <joint_name>rear_left_wheel</joint_name>
    </plugin>      

    <plugin name='skid_steer_drive' filename='libgazebo_ros_diff_drive.so'>
      <!-- topics & remappings -->
      <ros>
        <namespace>/robot_namespace</namespace>
        <remapping>/tf:=tf</remapping>
      </ros>
        
      <!-- Update rate -->
      <update_rate>50</update_rate>

      <!-- Number of wheel pairs -->
      <num_wheel_pairs>2</num_wheel_pairs>
        
      <!-- front wheels -->
      <left_joint>front_left_wheel</left_joint>
      <right_joint>front_right_wheel</right_joint>

      <!-- rear wheels-->
      <left_joint>rear_left_wheel</left_joint>
      <right_joint>rear_right_wheel</right_joint>

      <!-- kinematics -->
      <wheel_separation>0.490</wheel_separation>
      <wheel_separation>0.490</wheel_separation>
      <wheel_diameter>0.160</wheel_diameter>
      <wheel_diameter>0.160</wheel_diameter>
              
      <!-- limits -->
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>false</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
    </plugin>

    <!-- Scout sensors -->
    <!-- IMU -->
    <link name="imu_link">
      <pose>0 0 0.06 0 0 0</pose>
      <inertial>
        <inertia>
          <ixx>0.000024167</ixx>
          <ixy>0.000</ixy>
          <ixz>0.000</ixz>
          <iyy>0.000024167</iyy>
          <iyz>0.000</iyz>
          <izz>0.000041667</izz>
        </inertia>
        <mass>0.1</mass>
      </inertial>

      <collision name="imu_sensor_collision">
        <geometry>
          <box>
            <size>0.05 0.05 0.02</size>
          </box>
        </geometry>
      </collision>

      <visual name="imu_sensor_visual">
        <geometry>
          <box>
            <size>0.05 0.05 0.02</size>
          </box>
        </geometry>
        <color rgba="0.3 0.3 0.3 1.0"/>
      </visual>

      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <orientation_reference_frame>
          <localization>"ENU"</localization>
        </orientation_reference_frame>
        
        <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
          <ros>
            <namespace>/robot_namespace</namespace>
            <remapping>~/out:=imu</remapping>
          </ros>
          <initial_orientation_as_reference>false</initial_orientation_as_reference>
        </plugin>
      </sensor>
    </link>
    
    <joint name="imu_joint" type="fixed">
      <parent>base_link</parent>
      <child>imu_link</child>
      <pose>0 0 0 0 0 0</pose>
    </joint>

    <!-- RPLIDAR A3 -->
    <link name="base_scan">
      <pose>0.15 0 0.1 0 0 0</pose>
      <inertial>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.000</ixy>
          <ixz>0.000</ixz>
          <iyy>0.001</iyy>
          <iyz>0.000</iyz>
          <izz>0.001</izz>
        </inertia>
        <mass>0.2</mass>
      </inertial>

      <collision name="lidar_sensor_collision">
        <geometry>
          <cylinder>
            <radius>0.038</radius>
            <length>0.041</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="lidar_sensor_visual">
        <geometry>
          <cylinder>
            <radius>0.038</radius>
            <length>0.041</length>
          </cylinder>
        </geometry>
        <color rgba="0.3 0.3 0.3 1.0"/>
      </visual>

      <sensor name="rplidar_a3" type="ray">
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        
        <ray>
          <scan>
            <horizontal>
              <samples>1600</samples>
              <resolution>0.225</resolution>
              <min_angle>0.00</min_angle>
              <max_angle>6.28</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.2</min>
            <max>12.0</max>
            <resolution>0.12</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        
        <plugin name="lidar_plugin" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <namespace>/robot_namespace</namespace>
            <remapping>~/out:=scan</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>base_scan</frame_name>
        </plugin>
      </sensor>
    </link>

    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>base_scan</child>
      <pose>0 0 0 0 0 0</pose>
    </joint>
    
    <!-- GPS -->
    <link name="gps_link">
      <pose>-0.15 -0.125 0.3 0 0 0</pose>
      <inertial>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.000</ixy>
          <ixz>0.000</ixz>
          <iyy>0.001</iyy>
          <iyz>0.000</iyz>
          <izz>0.001</izz>
        </inertia>
        <mass>0.2</mass>
      </inertial>

      <collision name="gps_antenna_collision">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="gps_antenna_visual">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <color rgba="0.3 0.3 0.3 1.0"/>
      </visual>

      <collision name="gps_pole_visual">
        <pose>0 0 -0.155 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.005</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="gps_pole_visual">
        <pose>0 0 -0.155 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.005</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
        <color rgba="0.3 0.3 0.3 1.0"/>
      </visual>

      <sensor name="gps_sensor" type="gps">
        <always_on>true</always_on>
        <update_rate>1.0</update_rate>
        
        <plugin name="gps_controller" filename="libgazebo_ros_gps_sensor.so">
            <ros>
                <namespace>/robot_namespace</namespace>
                <remapping>gps_controller/out:=gps</remapping>
                <remapping>gps_controller/vel:=gps/vel</remapping>
            </ros>
            <frame_name>gps_link</frame_name>
        </plugin>
      </sensor>
    </link>

    <joint name="gps_joint" type="fixed">
      <parent>base_link</parent>
      <child>gps_link</child>
      <pose>0 0 0 0 0 0</pose>
    </joint>
  </model>
</sdf>
